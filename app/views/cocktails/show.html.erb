<h2> <%= @cocktail.name.titleize %> </h2>

<h4>Ingredients</h4>
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %> | <%= dose.ingredient.name %>
    <%= link_to 'X', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>

<% end %>

<%= link_to "Back", cocktails_path %>
